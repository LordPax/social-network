html(lang='fr')
    include ../parts/head.pug
    body
        include ../parts/header.pug
        section
            div.large.large2
                div.fen
                    div.fen_title Nouveau thread
                    div.fen_content
                        form.form(method='post' action='')
                            input.input.form_title(type='text' name='input_title' placeholder='titre du thread')
                            textarea.input.form_content(name='input_content' placeholder='contenu du thread')
                            div.form_right
                                input.button.form_sub(type='submit' name='sub' value='poster')

        include ../parts/footer.pug
