html(lang='fr')
    include ../parts/head.pug
    body
        include ../parts/header.pug
        section
            div.large.large2
                div.main_centre
                    div.fen_title Nouveau thread
                    div.fen_content
                        form.form(method='post' action='')
                            input.input_text(type='text' name='input_title' placeholder='titre du thread')
                            textarea.input_area(name='input_content' placeholder='contenu du thread')
                            div.form_right
                                input.button.log_btn(type='submit' name='sub' value='Poster')
                        - if (locals.err)
                            div.fen.msgErr #{locals.err}

        include ../parts/footer.pug
