html(lang='fr')
    include ../parts/head.pug
    body
        include ../parts/header.pug
        section
            div.large.large2
                div.main
                    - if (locals.err)
                        div.fen.msgErr #{locals.err}
                    - else
                        div.fen
                            div.fen_title #{locals.profil.name}
                            div.fen_content
                                - if(locals.userId == locals.profil.userId)
                                    ='test'
                                - else
                                    ='test 2'
                        div.fen
                            div.fen_title Ses threads
                            div.fen_content coming soon
                    

        include ../parts/footer.pug
